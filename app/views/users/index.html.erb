<div class="container">
 <div class="row">
  <div class="col-xs-3">
   <h2>User info</h2>
    <table class="table">
     <tbody>
	    <tr>
       <th><%= attachment_image_tag current_user, :profile_image, size:'60x60' ,fallback: "no-image.png" %></th>
      </tr>
      <tr>
       <th scope="row">name</th>
       <td><%=current_user.name%></td>
      </tr>
      <tr>
       <th scope="row">introduction</th>
       <td colspan="2"><%=current_user.introduction%></td>
      </tr>
     </tbody>
    </table>
    <div class="row">
     <%= link_to edit_user_path(current_user) ,class:"btn btn-default col-md-12" do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
     <% end %>
    </div>
     <h2>New book</h2>
      <%= form_for(@book) do |f| %>
       <div class="row">
        <strong><p>Title</p></strong>
        <%= f.text_field :title,class:"col-md-12" %>
       </div>
       <div class="row">
        <strong><p>Option</p></strong>
        <%= f.text_area :body,class:"col-md-12" %>
       </div>
       <div class="row">
        <%= f.submit "Create Book", class:"btn btn-info create-btn  col-md-12"%>
       </div>
      <%end%>
 </div>





  <div class="col-xs-9">
   <h2>Users</h2>
  <table class="table">
   <thead>
    <tr>
     <th>image</th>
     <th>name</th>
     <th></th>
    </tr>
   </thead>
   <tbody>
   <% @users.each do |user|%>
    <tr>
     <th><%= attachment_image_tag user, :profile_image, size:'40x40' ,fallback: "no-image.png" %></th>
     <td><%= user.name %></td>
     <td><%= link_to "Show",user_path(user)%></td>
    </tr>
   <% end %>
  </tbody>
 </table>
</div>
</div>
</div>