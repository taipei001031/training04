
<div class="container offset-md-2">
 <h2>Editing Book</h2>
  <div class="row">
   <div class="col-md-12">
    <%= form_for (@book) do |f| %>
     <div class="row">
      <strong><p>Title</p></strong>
       <%= f.text_field :title,class:"col-md-12" %>
     </div>
     <div class="row">
      <strong><p>Option</p></strong>
       <%= f.text_area :body,class:"col-md-12" %>
     </div>
     <div class="row">
       <%= f.submit "Update Book", class:"btn btn-info col-md-12"%>
     </div>
   <% end %>
   <%= link_to "Show",book_path(@book)%> |
   <%= link_to "Back",books_path%>
  </div>
 </div>
</div>
